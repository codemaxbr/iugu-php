	"keywords": ["iugu", "sdk", "php", "api"],
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Lucas Maia",
			"email": "lucas.codemax@gmail.com"
		},
		{
			"name": "Codemax Sistemas",
			"email": "contato@codemax.com.br",
			"homepage": "https://codemax.com.br"
		}
	],
    "minimum-stability": "stable",
	"require": {
		"php": ">=8.1",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"guzzlehttp/guzzle": "8.0.x-dev",
		"nesbot/carbon": "^2.72"
